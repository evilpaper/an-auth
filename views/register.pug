extends base

block vars
  - var title = 'Register';

block body
  section
    h1 Create
    h1 your account.
    if error
      p.error #{error}
    form.stack(method="post")
      input(type="hidden", name="_csrf", value=csrfToken)
      label(for="firstName") First Name
        input#firstName(
          type="text",
          name="firstName",
          placeholder="First Name",
          required,
          autofocus
        )
      label(for="lastName") Last Name
        input#lastName(
          type="text",
          name="lastName",
          placeholder="Last Name",
          required,
          autofocus
        )
      label(for="email") Email
        input#email(
          type="email",
          name="email",
          placeholder="Email",
          required,
          autofocus
        )
      label(for="password") Password
        input#password(
          type="password",
          name="password",
          placeholder="Password",
          required
        )
      button(type="submit") Create account
